<section class="card">

<!-- Each story shows the title and created time/date -->
<header>
    <div>{{story.title}}</div>
    <div id="story_time">Posted on {{format_time story.createdAt}}</div>
</header>

<div class="full-story">
    <p>{{story.content}}</p>
</div>

</section>

<section class="card">
<form class="form comment-form comment-box" id="comment-form">
    <div class="form-group">
        <label for="comment-body" class="form-group" id="comment-add"><b>Add a comment:</b></label>
        <input class="form-input" type="comment" id="comment-body" />
    </div>
    <div class="form-group">
        <button class="submit-btn" type="submit">Submit</button>
    </div>
</form>
</section>

<!-- Using a helper to then display all comments -->
{{#each story.comments as |comment|}}
{{> comment-details}}
{{/each}}

</section>
<script src="/js/comment.js"></script>



