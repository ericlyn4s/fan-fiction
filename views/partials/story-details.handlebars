<section class="card">
  <a href="/story/{{id}}">
    <header>
      <div>{{title}}</div>
      <div id="poster">Posted by
        {{user.username}}</div>
    </header>
    <div class="card-subheader">Series: {{series}}</div>
    <div class="card-body">
      <body>{{description}}</body>
    </div>
  </a>

  <footer class="m-2">
    
    <a
      class="btn like-btn btn-secondary"
      style="background-color: #d4514d; color: white;"
      href="api/stories/like-story/{{id}}"
    >Like</a>
    <div class="like-count font-italic mx-2">Likes: {{likeCount}}</div>
  </footer>
</section>

